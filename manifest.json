{
    "manifest_version": 2,
    "name": "cryoSPARC Download All",
    "version": "0.1",

    "description": "Adds an icon to the toolbar to download all maps in cryoSPARC jobs which produce multiple maps.",

    "icons": {
        "32": "icons/map-32.png",
        "48": "icons/map-48.png",
        "64": "icons/map-64.png",
        "96": "icons/map-96.png"
    },

    "permissions": [
        "activeTab",
        "downloads"
    ],

    "browser_action": {
        "default_icon": "icons/map-32.png",
        "default_title": "Download Maps"
    },

    "background": {
        "scripts": ["click-listener.js"],
        "persistent": false
    }
}